<!DOCTYPE html>
<html>
<head>
  <title>Recipes for <%= ingredient %></title>
  <style>
    body {
      padding: 5px;
    }

    h1{
      text-align: left;
      margin: 0;
      font-size: 50px;
    }

    h2 {
      text-align: left;
      margin-top: 25px;
      margin-bottom: 30px;
      font-size: 28px;
    }

    .recipe-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .recipe-item {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
        padding: 10px;
        background-color: #fddbba;
        border: 5px solid black;
    }

    .recipe-text {
        flex: 3;
        padding-right: 15px;
        text-align: center;
    }

    .recipe-text h3 {
      margin: 0;
      font-size: 30px;
    }

    .recipe-img {
      flex: 1;
    }

    .recipe-img img {
      width: 100%;
      max-width: 120px;
      height: 120px;
      object-fit: cover;
      border-radius: 4px;
    }

    .again {
      display: block;
      text-align: center;
      margin-top: 30px;
    }
  </style>
</head>
<body>
  <h1>Meal Finder</h1>
  <h2>Main ingredient:<%= ingredient %></h2>

  <% if (!meals) { %>
    <p style="text-align:center;">No recipes found for "<%= ingredient %>".</p>
  <% } else { %>
    <ul class="recipe-list">
      <% meals.forEach(meal => { %>
        <li class="recipe-item">
          <div class="recipe-text">
            <h3><%= meal.strMeal %></h3>
          </div>
          <div class="recipe-img">
            <img src="<%= meal.strMealThumb %>" alt="<%= meal.strMeal %>">
          </div>
        </li>
      <% }); %>
    </ul>
  <% } %>

  <a class="again" href="/recipesinput">again</a>
</body>
</html>
